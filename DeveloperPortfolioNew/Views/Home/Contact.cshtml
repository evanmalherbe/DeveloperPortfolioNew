@model DeveloperPortfolioNew.ViewModels.ContactViewModel
@* Assuming you have a ContactViewModel with properties like Name, Email, GithubUrl, LinkedInUrl *@

@{
  ViewData["Title"] = "Contact Evan";
}

<div class="container pt-3 pb-5">
  <div class="row pt-2 align-items-center justify-content-between">

    @* --- Left Column: Contact Details --- *@
    <div class="col-lg-6 mb-4 mb-lg-0 pt-1">
      <h1 class="display-5 fw-bold mb-3 text-primary-accent">Get In Touch</h1>
      <p class="lead text-dark-gray mb-4">
        I'm always open to new opportunities and collaborations. Feel free to reach out!
      </p>

      <div class="contact-details">
        <div class="d-flex align-items-center mb-3">
          <i class="fa fa-user fs-4 me-3 text-secondary-accent"></i>
          <p class="mb-0 fs-5 text-dark-gray">
            <span class="fw-bold">Name:</span> @Model.Name
          </p>
        </div>

        <div class="d-flex align-items-center mb-3">
          <i class="fa fa-envelope fs-4 me-3 text-secondary-accent"></i>
          <p class="mb-0 fs-5">
            <span class="fw-bold text-dark-gray">Email:</span>
            <a href="mailto:@Model.Email" class="text-primary-accent">@Model.Email</a>
          </p>
        </div>

        <div class="d-flex align-items-center mb-3">
          <i class="fa-brands fa-github fs-4 me-3 text-secondary-accent"></i>
          <p class="mb-0 fs-5">
            <span class="fw-bold text-dark-gray">GitHub:</span>
            <a href="@Model.GithubUrl" target="_blank" class="text-primary-accent">@Model.GithubUrl</a>
          </p>
        </div>

        <div class="d-flex align-items-center mb-3">
          <i class="fa-brands fa-linkedin fs-4 me-3 text-secondary-accent"></i>
          <p class="mb-0 fs-5">
            <span class="fw-bold text-dark-gray">LinkedIn:</span>
            <a href="@Model.LinkedInUrl" target="_blank" class="text-primary-accent">@Model.LinkedInUrl</a>
          </p>
        </div>
      </div>
    </div>

    @* --- Right Column: Image --- *@
    <div class="col-lg-4 text-center">
      <img src="/images/business.jpg"
           alt="Laptop, Phone, Notebook"
           class="img-fluid rounded-3 shadow-sm border-1 border-primary-accent"
           style="max-height: 250px; object-fit: cover;">
    </div>

  </div>
</div>
