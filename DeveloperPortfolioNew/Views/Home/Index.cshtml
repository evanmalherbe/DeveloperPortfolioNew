@* Home page *@
@using DeveloperPortfolioNew.TransferObjects
@model DeveloperPortfolioNew.ViewModels.IndexViewModel

@{
  ViewData["Title"] = "Home | Evan Malherbe";
  string? error = ViewData["ErrorMessage"] as string;
  List<FrameworkDTO> frameworks = Model?.Frameworks ?? new List<FrameworkDTO>();
  List<TechIcon> techIcons = Model?.TechnologyIcons ?? new List<TechIcon>();
}

<style>
  .container { padding: 15px 40px; border-radius: 12px; }
   h1 { font-size: 2.5rem; margin-bottom: 10px; font-weight: 700; }
  .subtitle { font-size: 1.1rem; color: #666; margin-bottom: 20px; line-height: 1.6; }
  .tech-grid { display: flex; flex-wrap: wrap; gap: 12px; margin-bottom: 30px; }

  /* Custom colors for specific technologies color: #f7df1e; color: #323330; */
  .react { background-color: #61dafb; }
  .nextjs { background-color: #000; }
  .dotnetcore { background-color: #06b6d4; }
  .javascript { background-color: #f0db4f;  }
  .typescript { background-color: #3178c6; }
  .nodejs { background-color: #339933; }
  .express { background-color: #000; }
  .npm { background-color: #cb3837; }
  .pnpm { background-color: #f69220; }
  .git { background-color: #f05032; }
  .github { background-color: #181717; }
  .csharp { background-color: #f24e1e; }
  .turborepo { background-color: #ef4444; }
  .deno { background-color: #000; }
  .postgresql { background-color: #4169e1; }
  .sql { background-color: #4479a1; }
  .mongodb { background-color: #47a248; }
  .discord { background-color: #5865f2; }
  .rollup { background-color: #ec4a3f; }
  .docker { background-color: #2496ed; }
  .vercel { background-color: #000; }
  .astro { background-color: #ff5d01; }
  .eslint { background-color: #4b32c3; }
</style>

<div class="container pt-0 mb-4 ps-2 pe-2">
  <header class="text-center mb-2">
    <h1 class="display-3 fw-bold text-primary-accent mb-0">Hello, I'm Evan Malherbe</h1>
    <p class="lead text-secondary-accent">Developer | Problem Solver | Creator</p>
  </header>

  <div class="row d-flex align-items-center justify-content-between">
    <div class="col-lg-3 text-center mb-4 mb-lg-0">
      <img src="/images/profile.jpg"
           alt="Evan Profile Photo"
           class="img-fluid shadow-sm border border-primary-accent"
           style="border-radius: 6px; width: 250px; height: auto; object-fit: cover;">
      @*  <p class="mt-3 text-muted small">Connect with me on LinkedIn/GitHub!</p> *@
    </div>

    <div class="col-lg-8">
      <h2 class="mb-2 text-secondary-accent pb-1">A Little About Me</h2>
      <p class="fs-5 text-dark-gray">
        Hello! I'm Evan Malherbe, a Full Stack Web Developer. I specialise in building robust applications using
        both front-end and back-end technologies. Please explore the rest of my portfolio to view <a href="/home/about" class=" fw-bold">my background</a> and
        browse my recent <a href="/home/projects" class=" fw-bold">coding projects</a>.
      </p>
      <a href="/home/Contact" class="btn btn-custom-accent btn-lg mt-3 shadow-sm">Get In Touch</a>
    </div>
  </div>

  <hr class="horiz mt-5 mb-3">

  <section class="text-start">
    <h2 class="mb-2 text-secondary-accent">Technologies I use</h2>
    <p class="subtitle">Here are some of the frameworks / technologies that I work with or have used:</p>
    <div class="tech-grid">
      @if (techIcons.Count > 0 && techIcons.Any())
      {
        @foreach (TechIcon techIcon in techIcons)
        {
          if (techIcon.IconType == "FA")
          {
            <div class="tech-badge">
              <i class="@techIcon.ClassOrPath"></i>
              <span>@techIcon.Name</span>
            </div>
          }
          else
          {
            <div class="tech-badge">
              <img src="@techIcon.ClassOrPath"
                   alt="@techIcon.Name logo"
                   class="tech-icon-svg" />
              <span>@techIcon.Name</span>
            </div>
          }
        }
      }
      else
      {
        <p class="text-danger">No frameworks were returned by the API</p>
      }
    </div>
    <p class="mt-4 text-muted">And always exploring more!</p>
  </section>
</div>
