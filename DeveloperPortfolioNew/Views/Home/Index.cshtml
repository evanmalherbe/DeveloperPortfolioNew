  .subtitle { font-size: 1.1rem; color: #666; margin-bottom: 40px; line-height: 1.6; }

  .tech-grid { display: flex; flex-wrap: wrap; gap: 12px; margin-bottom: 30px; }

  /* Custom colors for specific technologies */
